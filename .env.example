# Claude Terminal Remote - Environment Configuration
# Copy to ~/.claude-terminal-remote.env and fill in your values

# Supabase credentials (from Project Settings > API)
export CLAUDE_TERMINAL_SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
export CLAUDE_TERMINAL_SUPABASE_KEY="your-supabase-anon-key"

# Your n8n webhook URL (after importing and activating the workflow)
export CLAUDE_TERMINAL_WEBHOOK_URL="https://your-n8n-instance.com/webhook/claude-terminal-remote"

# Unique topic suffix for ntfy topics
# Generate with: openssl rand -hex 4
# This ensures your topics are unique and not colliding with others
export CLAUDE_TERMINAL_TOPIC_SUFFIX="your-unique-suffix"

# Optional: Poll interval in seconds (default: 5)
# export CLAUDE_TERMINAL_POLL_INTERVAL=5

# Optional: Log file location (default: ~/Library/Logs/claude-terminal-remote.log)
# export CLAUDE_TERMINAL_LOG_FILE="$HOME/Library/Logs/claude-terminal-remote.log"
